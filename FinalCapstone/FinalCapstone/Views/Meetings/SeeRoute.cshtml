<body>
    <h2>Find my Events:</h2>
    <div id="map"></div>
</body>
        <script>

        function initMap() {
            var map = new google.maps.Map(document.getElementById('map'), { zoom: 5, center: { lat: 43.0389, lng: -87.9065 } });

            @foreach(var item in Model) {
                <text>
                myLatLng = new google.maps.LatLng(@item.Latitude, @item.Longitude);
                marker = new google.maps.Marker({
                    position: myLatLng,
                    map: map
                });
                </text>
            }

        }

        </script>
        <script src="@ViewBag.APICall" async defer></script>
        
        <p>
            @Html.ActionLink("Meetings", "Index", "Meetings", new { id = Model.FirstOrDefault().TeamId }, null) |
