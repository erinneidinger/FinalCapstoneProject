@model IEnumerable<FinalCapstone.Models.Meeting>

@{
    ViewBag.Title = "Index";
}

    <div class="jumbotron" style="background-image: url(../../streetlifeboots2.jpg); object-fit: fill; background-size: cover; background-position:center; height: 200px">
        <p class="lead" style="font-size: 75px; text-shadow: -4px 4px 5px #000000;
">Meetings</p>
    </div>

<p class="btn btn-default">
    @Html.ActionLink("See All Event Locations", "SeeRoute", new { id = ViewBag.TeamId }) 
</p>
<p class="btn btn-default">
    @Html.ActionLink("Directions", "Directions", new { id = ViewBag.TeamId })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Time)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StreetAddress)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.City)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.State)
        </th>

        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Time)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StreetAddress)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.City)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.State)
            </td>
            <td>
            </td>

            <td>
                <p class="btn btn-default">
                    @Html.ActionLink("Edit", "Edit", new { id = item.MeetingId }) 
                </p>
                <p class="btn btn-default">
                    @Html.ActionLink("Details", "Details", new { id = item.MeetingId }) 
                </p>
                <p class="btn btn-default">
                    @Html.ActionLink("Delete", "Delete", new { id = item.MeetingId })
                </p>
            </td>
        </tr>
    }

</table>
