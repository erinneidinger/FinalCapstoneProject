        }

<div>
    <p class="btn btn-default">
        @Html.ActionLink("Delete", "Delete", new { id = Model.OrganizationId }) </p>
    <p class="btn btn-default">
        @Html.ActionLink("Back to List", "Index")
    </p>
</div>
