@model IEnumerable<FinalCapstone.Models.Team>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create new Team", "Create", "Teams")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
    
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        
        <td>

            @Html.ActionLink("Join Team", "AddToJunction", "Teams", new { id = item.TeamId }, null) |
            @Html.ActionLink("Details", "Details", new { id = item.TeamId }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.TeamId })
        </td>
    </tr>
}

</table>
