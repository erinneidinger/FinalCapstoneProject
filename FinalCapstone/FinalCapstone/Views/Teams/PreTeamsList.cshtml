@model IEnumerable<FinalCapstone.Models.Team>

@{
    ViewBag.Title = "PreTeamsList";
}

<h3>Choose your team:</h3>
<div>
    <hr />
    <table class="dl-horizontal">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th></th>
        </tr>


        @foreach (var item in Model)
        {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            <div class="btn btn-default">
                @Html.ActionLink("Join", "AddToJunction", "Teams", new { id = item.TeamId }, null)
            </div>
        </td>
     
    </tr>
                }
        
        </table>
      
   
</div>


