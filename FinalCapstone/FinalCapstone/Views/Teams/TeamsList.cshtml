@model IEnumerable<FinalCapstone.Models.Team>

@{
    ViewBag.Title = "TeamsList";
}

<h2>@ViewBag.OrganizationName Organization</h2>

@if (@ViewBag.Junction != null)
{
    <p>@Html.ActionLink("Create New Teams", "Create", "Teams", new { id = @ViewBag.OrganizationId }, null) | @Html.ActionLink("Create Request", "Create", "Requests") | @Html.ActionLink("Send Emergency Text!", "SendSms", "SMS")</p>
}

    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            @if (@ViewBag.Junction != null)
            {
                <th>
                    @Html.DisplayNameFor(model => model.Counter)
                </th>
            }
                <th></th>
            </tr>

        @foreach (var item in Model)
        {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        @if (@ViewBag.Junction != null)
        {
            <td>
                @Html.DisplayFor(modelItem => item.Counter)
            </td>
        }
            <td>
                @if (@ViewBag.Junction != null)
                {
                    <div>
                        @Html.ActionLink("Team Route", "SeeRoute", "Meetings", new { id = item.TeamId }, null) |
                        @Html.ActionLink("See Requests", "Index", "Requests", new { id = item.TeamId }, null) |
                        @Html.ActionLink("Create Events", "Create", "Meetings", new { id = item.TeamId }, null) |
                        @Html.ActionLink("Details", "Details", "Teams", new { id = item.TeamId }, null)
                    </div>
                }
                @if (@ViewBag.Junction == null)
                {
                    <div>
                        @Html.ActionLink("Join", "AddToJunction", "Teams", new { id = item.TeamId }, null)
                    </div>
                }

            </td>
        </tr>
        }

    </table>
