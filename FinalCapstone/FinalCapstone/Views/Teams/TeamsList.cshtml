@model IEnumerable<FinalCapstone.Models.Organization>

@{
    ViewBag.Title = "TeamsList";
}

<h2>@ViewBag.OrganizationName Organization</h2>
<p>@Html.ActionLink("Create New Teams", "Create", "Teams") | @Html.ActionLink("Send Emergency Text!", "SendSms", "SMS")</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Members)
        </th>

        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Members)
            </td>

            <td>
                @Html.ActionLink("Team Route", "SeeRoute", "Meetings") |
                @Html.ActionLink("Join Team", "AddToJunction", "Teams") |
                @Html.ActionLink("Create Events", "Create", "Meetings") |
                @Html.ActionLink("Details", "Details", new { id = item.TeamId })

            </td>
        </tr>
    }

</table>
