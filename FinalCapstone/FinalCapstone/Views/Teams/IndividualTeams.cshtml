@model IEnumerable<FinalCapstone.Models.Team>
<div class="jumbotron" style="background-image: url(../../streetlifeboots2.jpg); object-fit: fill; background-size: cover; background-position:center; height: 200px">
    <p class="lead" style="font-size: 75px; text-shadow: -4px 4px 5px #000000;
">My Teams</p>
</div>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>

        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>

            <td>
                <div class="btn btn-default">
                    @Html.ActionLink("Details", "TeamsList", "Teams", new { id = item.OrganizationId }, null)
                </div>
                <div class="btn btn-default">
                    @Html.ActionLink("Delete", "Delete", "Teams", new { id = item.TeamId }, null)
                </div>
            </td>
        </tr>
    }

</table>
